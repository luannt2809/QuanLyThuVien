<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sửa phiếu mượn</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/stylesheets/accounts.css" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('../layouts/navBills.ejs') %>
        </div>

        <div class="row">
            <div class="container pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h3 ps-4">Sửa phiếu mượn</h1>
            </div>
        </div>

        <form action="/bills/edit/<%= bill._id %>" method="POST" class="mx-4">

            <div class="row form-group mb-4">
                <label for="status">Trạng thái</label>
                <select class="form-select mt-2" aria-label="Chọn trạng thái" name="status" required>
                    <option value="0" <%=bill.status===0 ? 'selected' : '' %>>Chưa trả</option>
                    <option value="1" <%=bill.status===1 ? 'selected' : '' %>>Đã trả</option>
                </select>
            </div>

            <div class="form-group mb-4">
                <button type="submit" class="btn btn-primary">Sửa phiếu mượn</button>
            </div>
        </form>

    </div>

    <%- include('../layouts/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"
        integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"
        integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ"
        crossorigin="anonymous"></script>
</body>

</html>