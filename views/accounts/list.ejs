<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách thủ thư</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/stylesheets/accounts.css" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('../layouts/navAccounts.ejs') %>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <a href="/accounts/add" class="btn btn-outline-secondary">+ Thêm thủ thư</a>
        </div>

        <div class="container">
            <form action="/accounts/search/" method="GET">
                <div class="input-group mt-4">
                    <input type="text" class="form-control" id="keyword" name="keyword" value="<%= keyword %>"
                        placeholder="Nhập từ khóa username">
                    <button class="btn btn-outline-secondary" type="submit">Tìm kiếm</button>
                </div>
            </form>
        </div>

        <div class="row mt-4">
            <div class="col-md-12 mb-3">
                <div class="card">
                    <div class="card-header">
                        <span><i class="bi bi-table me-2"></i></span>
                        Danh sách thủ thư
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th class="text-center">STT</th>
                                        <th>Username</th>
                                        <th>Họ và tên</th>
                                        <th>Email</th>
                                        <th>Vai trò</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% accounts.forEach((element, index)=> { %>
                                        <tr class="align-middle">
                                            <td class="fw-medium text-center">
                                                <%= index + 1 %>
                                            </td>
                                            <td>
                                                <%= element.username %>
                                            </td>
                                            <td>
                                                <%= element.fullname %>
                                            </td>
                                            <td>
                                                <%= element.email %>
                                            </td>
                                            <td>
                                                <%= element.roleId.name %>
                                            </td>
                                            <td>
                                                <a href="/accounts/view/<%= element._id %>" type="button"
                                                    class="btn btn-primary">View</a>
                                                <a href="/accounts/edit/<%= element._id %>" type="button"
                                                    class="btn btn-warning">Edit</a>
                                                <a href="/accounts/delete/<%= element._id %>" type="button"
                                                    class="btn btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <%- include('../layouts/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"
        integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"
        integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ"
        crossorigin="anonymous"></script>
</body>

</html>