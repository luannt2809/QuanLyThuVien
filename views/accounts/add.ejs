<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm thủ thư</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/stylesheets/accounts.css" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('../layouts/navAccounts.ejs') %>
        </div>

        <div class="row">
            <div class="container pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h3 ps-4">Thêm thông tin</h1>
            </div>
        </div>

        <form action="/accounts/add" method="POST" class="mx-4" enctype="multipart/form-data">
            <% if (msg) { %>
                <p class="alert alert-danger">
                    <%= msg %>
                </p>
                <% } %>
                    <div class="row form-group mb-4">
                        <div class="col">
                            <label for="username">Username</label>
                            <input type="text" class="form-control" id="username" name="username" value=""
                                placeholder="Username">
                        </div>

                        <div class="col">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="passwd" value=""
                                placeholder="Password">
                        </div>
                    </div>

                    <div class="row form-group mb-4">
                        <div class="col">
                            <label for="email">Email</label>
                            <input type="text" class="form-control" id="email" name="email" value=""
                                placeholder="Email">
                        </div>

                        <div class="col">
                            <label for="fullname">Họ và tên</label>
                            <input type="text" class="form-control" id="fullname" name="fullname" value=""
                                placeholder="Họ và tên">
                        </div>
                    </div>

                    <div class="row form-group mb-4">
                        <div class="col">
                            <label for="avatar">Avatar</label>
                            <input type="file" class="form-control" id="avatar" name="avatar" value=""
                                placeholder="Avatar">
                        </div>

                        <div class="col">
                            <label for="role">Vai trò</label>
                            <input type="text" class="form-control" id="role" name="role" value="Thủ thư"
                                placeholder="Vai trò" disabled>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <button type="submit" class="btn btn-primary">Thêm thủ thư</button>
                    </div>
        </form>

    </div>

    <%- include('../layouts/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"
        integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"
        integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ"
        crossorigin="anonymous"></script>
</body>

</html>