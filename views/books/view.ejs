<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thông tin sách</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/stylesheets/accounts.css" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('../layouts/navBooks.ejs') %>
        </div>

        <div class="row">
            <div
                class="container pt-3 pb-2 mb-3 border-bottom d-flex justify-content-between flex-wrap flex-md nowrap align-items-center">
                <h1 class="h3 ps-4">
                    <%= book.name %>
                </h1>
                <div class="btn-toolbar mb-2 mb-md 0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
                    </div>
                </div>
            </div>
        </div>

        <ul class="list-group mx-4 mt-3">
            <li class="list-group-item">
                <img src="<%= book.image %>" alt="" style="height: 80px;">
            </li>
            <li class="list-group-item">
                <div class="row">
                    <div class="col" style="max-width: 140px;"> <b>Tên sách:</b></div>
                    <div class="col">
                        <%= book.name %>
                    </div>
                </div>
            </li>

            <li class="list-group-item">
                <div class="row">
                    <div class="col" style="max-width: 140px;"> <b>Tác giả:</b></div>
                    <div class="col">
                        <%= book.author %>
                    </div>
                </div>
            </li>

            <li class="list-group-item">
                <div class="row">
                    <div class="col" style="max-width: 140px;"> <b>Thể loại:</b></div>
                    <div class="col">
                        <%= book.cateId.name %>
                    </div>
                </div>
            </li>

            <li class="list-group-item">
                <div class="row">
                    <div class="col" style="max-width: 140px;"> <b>Giá sách:</b></div>
                    <div class="col">
                        <%= book.priceBook %> vnđ
                    </div>
                </div>
            </li>

            <li class="list-group-item">
                <div class="row">
                    <div class="col" style="max-width: 140px;"> <b>Giá thuê:</b></div>
                    <div class="col">
                        <%= book.priceRent %> vnđ
                    </div>
                </div>
            </li>

            <li class="list-group-item">
                <div class="row">
                    <div class="col" style="max-width: 140px;"> <b>Số lượng:</b></div>
                    <div class="col">
                        <%= book.quantity %>
                    </div>
                </div>
            </li>

            <li class="list-group-item">
                <div class="row">
                    <div class="col" style="max-width: 140px;"> <b>Nhà xuất bản:</b></div>
                    <div class="col">
                        <%= book.nxb %>
                    </div>
                </div>
            </li>

            <li class="list-group-item">
                <div class="row">
                    <div class="col" style="max-width: 140px;"> <b>Mô tả:</b></div>
                    <div class="col">
                        <%= book.desc %>
                    </div>
                </div>
            </li>
        </ul>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"
        integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"
        integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ"
        crossorigin="anonymous"></script>
</body>

</html>