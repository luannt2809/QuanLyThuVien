<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách quyển sách</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/stylesheets/accounts.css" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('../layouts/navBooks.ejs') %>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <a href="/books/add" class="btn btn-outline-secondary">+ Thêm sách</a>
        </div>

        <div class="container">
            <form action="/books/search/" method="GET">
                <div class="input-group mt-4">
                    <input type="text" class="form-control" id="keyword" name="keyword" value="<%= searchKeyword %>"
                        placeholder="Tên sách">
                    <select class="form-select" aria-label="Chọn thể loại" name="category">
                        <option value="">Tất cả thể loại</option>
                        <% categories.forEach(element=> { %>
                            <option value="<%= element._id %>" <%=element._id===searchCategory ? 'selected' : '' %>>
                                <%= element.name %>
                            </option>
                            <% }) %>
                    </select>
                    <select class="form-select" aria-label="Chọn thể loại" name="priceRent">
                        <% let select=""; if(searchPriceRent==0){select="selected" %>
                            <option <%=select %> value="0">Tất cả giá mượn</option>
                            <%}else{%>
                                <option value="0">Tất cả giá mượn</option>
                           <%}%>
                           <% let select1=""; if(searchPriceRent==1){select1="selected" %>
                            <option <%=select1 %> value="0">Dưới 50.000VNĐ</option>
                            <%}else{%>
                                <option value="1">Dưới 50.000VNĐ</option>
                           <%}%>
                           <% let select2=""; if(searchPriceRent==2){select2="selected" %>
                            <option <%=select2 %> value="0">Từ 50.000VNĐ-100.000VNĐ</option>
                            <%}else{%>
                                <option value="2">Từ 50.000VNĐ-100.000VNĐ</option>
                           <%}%>
                           <% let select3=""; if(searchPriceRent==3){select3="selected" %>
                            <option <%=select3 %> value="0">Từ 100.000VNĐ-200.000VNĐ</option>
                            <%}else{%>
                                <option value="3">Từ 100.000VNĐ-200.000VNĐ</option>
                           <%}%>
                           <% let select4=""; if(searchPriceRent==4){select4="selected" %>
                            <option <%=select4 %> value="0">Trên 200.000VNĐ</option>
                            <%}else{%>
                                <option value="4">Trên 200.000VNĐ</option>
                           <%}%>

                       

                    </select>
                    <button class="btn btn-outline-secondary" type="submit">Tìm kiếm</button>
                </div>
            </form>
        </div>

        <div class="row mt-4">
            <div class="col-md-12 mb-3">
                <div class="card">
                    <div class="card-header">
                        <span><i class="bi bi-table me-2"></i></span>
                        Danh sách
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th class="text-center">STT</th>
                                        <th>Ảnh</th>
                                        <th>Tên sách</th>
                                        <th>Tác giả</th>
                                        <th>Giá sách</th>
                                        <th>Giá thuê</th>
                                        <th>Số lượng</th>
                                        <th>Nhà xuất bản</th>
                                        <th>Thể loại</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% books.forEach((element, index)=> { %>
                                        <tr class="align-middle">
                                            <td class="fw-medium text-center">
                                                <%= index + 1 %>
                                            </td>
                                            <td>
                                                <img src="<%= element.image %>" alt="" style="height: 120px;">
                                            </td>
                                            <td>
                                                <%= element.name %>
                                            </td>
                                            <td>
                                                <%= element.author %>
                                            </td>
                                            <td>
                                                <%= element.priceBook %> vnđ
                                            </td>
                                            <td>
                                                <%= element.priceRent %> vnđ
                                            </td>
                                            <td>
                                                <%= element.quantity %>
                                            </td>
                                            <td>
                                                <%= element.nxb %>
                                            </td>
                                            <td>
                                                <%= element.cateId.name %>
                                            </td>
                                            <td>
                                                <a href="/books/view/<%= element._id %>" type="button"
                                                    class="btn btn-primary">View</a>
                                                <a href="/books/edit/<%= element._id %>" type="button"
                                                    class="btn btn-warning">Edit</a>
                                                <a href="/books/delete/<%= element._id %>" type="button"
                                                    class="btn btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"
        integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"
        integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ"
        crossorigin="anonymous"></script>
</body>

</html>